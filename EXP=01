#include <stdio.h>
int main () {

float a, b, c, d, e;
float sum, avg;

printf("Enter Marks : ");
scanf("%f", &a);

printf("Enter Marks : ");
scanf("%f", &b);

printf("Enter Marks : ");
scanf("%f", &c);printf("Enter Marks : ");
scanf("%f", &d);

printf("Enter Marks : ");
scanf("%f", &e);

sum = a + b + c + d + e;
avg = sum / 5;

if (a <= 0 || a >= 100 ||
    b <= 0 || b >= 100 ||
    c <= 0 || c >= 100 ||
    d <= 0 || d >= 100 ||
    e <= 0 || e >= 100) {
    printf("Re-enter the Marks \n");
} else {
    printf("Average = %.2f \n", avg);
    if (avg >= 40) {
        printf("Passed \n");
    } else {
        printf("Failed \n");
    }
}
return 0;
}
